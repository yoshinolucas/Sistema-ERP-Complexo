@model Usuario
@{
    ViewData["Title"] = "Confirmação apagar";
}


<div class="text-center text-light d-grid gap-2 col-6 mx-auto">
    <h3>Deseja realmente apagar o usuário (@Model.Nome)?</h3>
</div>


<div class="d-grid gap-2 col-6 mx-auto">
    <a class="btn btn-warning btn-block mt-4" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
    <a class="btn btn-outline-danger btn-block" role="button"
    asp-controller="Usuario" asp-action="ExcluirUsuarioDefinitivo" asp-route-id="@Model.Id_Usuario">Confirmar</a>
</div>
