@model IReadOnlyList<Sistema_ERP.Models.Categoria>
@{
    ViewData["Title"] = "Categorias";
}

<div class="text-center">

    

    <h1 class="display-4">Lista de categorias</h1>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Categoria"
        asp-action="CriarCategoria">Nova Categoria</a>
    </div>


    <table class="table table-striped mt-3">
      <thead class="table-dark">
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Opções</th>
        </tr>
      </thead>
          <tbody>
            @foreach(var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nome</td>
                    <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-warning" role="button" asp-route-id="@categoria.Id" asp-controller="Categoria"
                        asp-action="EditarCategoria">Editar</a>
                        <a role="button" class="btn btn-danger" asp-route-id="@categoria.Id" asp-controller="Categoria"
                        asp-action="ExcluirCategoria">Apagar</a>
                    </div>
                    </td>
                </tr>
            }
                   
          </tbody>
    </table>
</div>

