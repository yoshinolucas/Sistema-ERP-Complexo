@model Categoria
@{
    ViewData["Title"] = "Cadastrar Categoria";
}

<div class="text-center">

    <h1 class="display-4 text-light">Cadastrar Categoria</h1>
    
</div>

<div class="container">
    <form class="py-4 mt-4 border d-grid gap-2 col-6 mx-auto text-light" asp-controller="Categoria" asp-action="CriarCategoria" method="post">
              
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria"/>
            @Html.ValidationMessageFor(x => x.Nome)
        </div>        

        <div class="d-grid gap-2 col-6 mx-auto">
            <button type="submit" class="btn btn-primary btn-block">Salvar</button>
            <a class="btn btn-outline-warning btn-block" asp-controller="Categoria" asp-action="Index">Cancelar</a>
        </div>
        
    </form>
</div>
