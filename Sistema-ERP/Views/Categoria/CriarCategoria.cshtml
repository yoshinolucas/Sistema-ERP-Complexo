@model Categoria
@{
    ViewData["Title"] = "Cadastrar Categoria";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Categoria</h1>
    
</div>

<div class="container">
    <form asp-controller="Categoria" asp-action="CriarCategoria" method="post">
              
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria"/>
        </div>        

        <button type="submit" class="btn btn-primary btn-block">Salvar</button>
        <a class="btn btn-warning btn-block" asp-controller="Categoria" asp-action="Index">Voltar</a>
    </form>
</div>
