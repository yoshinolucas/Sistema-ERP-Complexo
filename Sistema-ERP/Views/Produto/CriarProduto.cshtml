@model Produto
@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Produto</h1>
    
</div>

<div class="container">
    <form asp-controller="Produto" asp-action="CriarProduto" method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto"/>
        </div>
        <div class="form-group">
            <label for="preco">Preço</label>
            <input asp-for="Preco" class="form-control" placeholder="Digite o valor do produto"/>
        </div>
        <div class="form-group">
            <label for="estoque">Estoque</label>
            <input asp-for="Estoque" class="form-control" placeholder="Digite o estoque inicial do produto"/>
        </div>
        <div class="form-group">
            <label>Categoria</label>
            <br />
            <select asp-for="Id_Categoria" asp-items="ViewBag.opcoesCategoria" class="form-select" aria-label="Default select example">       
                <option selected>Selecionar</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Salvar</button>
        <a class="btn btn-warning btn-block" asp-controller="Produto" asp-action="Index">Voltar</a>
    </form>
</div>
