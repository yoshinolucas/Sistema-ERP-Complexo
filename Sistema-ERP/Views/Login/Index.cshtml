@model LoginModel
@{
	Layout = "_Login";
	ViewData["Title"] = "Login";
}

<div class="container">
	<p class="mt-5 h1 text-light text-center">Bem-vindo ao sistema ERP do Haz</p>
    <p class="text-light text-center">Por favor, insira seus dados para se logar</p>
    

        <div class="d-grid gap-2 mt-5 col-6 mx-auto">       
	        <form asp-controller="Login" asp-action="Entrar" method="post" class="p-5 text-light border rounded-5">
              <div class="mb-3">
                <label for="login" class="form-label">Username</label>
                <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Digite seu usuário de login">
                @Html.ValidationMessageFor(x => x.Login)
              </div>
              <div class="mb-3">
                <label for="senha" class="form-label">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Digite sua senha">
                @Html.ValidationMessageFor(x => x.Senha)
              </div>
      
              <p class="mb-4 text-sm mx-auto">
                  Esqueceu a senha?
                  <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold">Redefinir senha</a>
              </p>

              <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
        </div>
</div>


